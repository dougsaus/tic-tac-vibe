{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 